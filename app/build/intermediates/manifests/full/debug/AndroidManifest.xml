        <activity android:name="com.kevinlu.airquality.ExploreActivity" />
        <activity android:name="com.kevinlu.airquality.SettingsActivity" />
        <activity android:name="com.kevinlu.airquality.ListActivity" />
        <activity android:name="com.kevinlu.airquality.CityActivity" >
        </activity>
